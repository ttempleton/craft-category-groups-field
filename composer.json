{
  "name": "ttempleton/craft-category-groups-field",
  "description": "A Craft CMS field type for selecting category groups",
  "version": "2.0.0-beta.1",
  "type": "craft-plugin",
  "keywords": [
    "cms",
    "craftcms",
    "plugin"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Thomas Templeton",
      "homepage": "https://github.com/ttempleton"
    }
  ],
  "require": {
    "craftcms/cms": "^4.0.0",
    "php": "^8.0.2"
  },
  "support": {
    "issues": "https://github.com/ttempleton/craft-category-groups-field/issues",
    "source": "https://github.com/ttempleton/craft-category-groups-field",
    "rss": "https://github.com/ttempleton/craft-category-groups-field/commits/2.x.atom"
  },
  "autoload": {
    "psr-4": {
      "ttempleton\\categorygroupsfield\\": "src/"
    }
  },
  "extra": {
    "handle": "category-groups-field",
    "name": "Category Groups Field",
    "class": "ttempleton\\categorygroupsfield\\Plugin",
    "changelogUrl": "https://github.com/ttempleton/craft-category-groups-field/blob/2.x/CHANGELOG.md",
    "downloadUrl": "https://github.com/ttempleton/craft-category-groups-field/archive/2.x.zip"
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "craftcms/rector": "dev-main",
    "craftcms/ecs": "dev-main"
  },
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix"
  }
}
